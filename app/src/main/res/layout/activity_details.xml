            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/tvDetailsType0"
            app:layout_constraintLeft_toLeftOf="@id/tvDetailsId"
            app:layout_constraintTop_toTopOf="@id/tvDetailsType0" />

        <TextView
            android:id="@+id/tvDetailsNumber0"
            android:layout_width="wrap_content"
