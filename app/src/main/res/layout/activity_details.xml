            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/tvDetailsId0"
            app:layout_constraintLeft_toRightOf="@id/tvDetailsId0"
            app:layout_constraintTop_toTopOf="@id/tvDetailsId0" />

        <TextView
            android:id="@+id/tvDetailsTime0"
            android:layout_width="wrap_content"
