            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="11111"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/tvDetailsNumber0"
            app:layout_constraintLeft_toLeftOf="@id/tvDetailsId"
            app:layout_constraintTop_toTopOf="@id/tvDetailsNumber0" />

        <TextView
            android:id="@+id/tvDetailsPrice0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="资源价格:"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="@id/tvDetailsId0"
            app:layout_constraintTop_toBottomOf="@id/tvDetailsNumber0" />

        <TextView
            android:id="@+id/tvDetailsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
