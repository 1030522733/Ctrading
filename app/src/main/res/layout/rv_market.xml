<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/aliceblue">

    <View
        android:id="@+id/vvRvMarket"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_bg_button_white"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivRvMarket"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/icon_sale"
        app:layout_constraintBottom_toBottomOf="@id/vvRvMarket"
        app:layout_constraintLeft_toLeftOf="@id/vvRvMarket"
        app:layout_constraintTop_toTopOf="@id/vvRvMarket" />

    <TextView
        android:id="@+id/tvRvMarketAddress1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:text="资源地址:"
        android:textColor="@color/grey"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/vvRvMarket"
        app:layout_constraintTop_toTopOf="@id/vvRvMarket" />

    <TextView
        android:id="@+id/tvRvMarketAddress"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/tvRvMarketAddress1"
        app:layout_constraintTop_toTopOf="@id/tvRvMarketAddress1" />

    <TextView
        android:id="@+id/tvRvMarketType1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="资源类型:"
        android:textColor="@color/grey"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/tvRvMarketAddress1"
        app:layout_constraintTop_toBottomOf="@id/tvRvMarketAddress1" />

    <TextView
        android:id="@+id/tvRvMarketType"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/themeColor"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/tvRvMarketAddress"
        app:layout_constraintTop_toTopOf="@id/tvRvMarketType1" />

    <TextView
        android:id="@+id/tvRvMarketNumber1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="资源数量:"
        android:textColor="@color/grey"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/tvRvMarketAddress1"
        app:layout_constraintTop_toBottomOf="@id/tvRvMarketType1" />

    <TextView
        android:id="@+id/tvRvMarketNumber"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/tvRvMarketAddress"
        app:layout_constraintTop_toTopOf="@id/tvRvMarketNumber1" />

    <TextView
        android:id="@+id/tvRvMarketPrice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="资源价格:"
        android:textColor="@color/grey"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/tvRvMarketAddress1"
        app:layout_constraintTop_toBottomOf="@id/tvRvMarketNumber1" />

    <TextView
        android:id="@+id/tvRvMarketPrice"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/tvRvMarketAddress"
        app:layout_constraintTop_toTopOf="@id/tvRvMarketPrice1" />

    <TextView
        android:id="@+id/tvRvMarketOrg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="所属组织:"
        android:textColor="@color/grey"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/tvRvMarketAddress1"
        app:layout_constraintTop_toBottomOf="@id/tvRvMarketPrice1" />

    <TextView
        android:id="@+id/tvRvMarketOrg"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/tvRvMarketAddress"
        app:layout_constraintTop_toTopOf="@id/tvRvMarketOrg1" />

    <View
        android:id="@+id/vvRvMarketLast"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintTop_toBottomOf="@id/vvRvMarket" />

    <View
        android:id="@+id/vvRvMarketMore"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/vvRvMarketLast" />


</androidx.constraintlayout.widget.ConstraintLayout>